<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/server_list_card_main"
    android:outlineSpotShadowColor="#00000000"
    android:backgroundTint="@color/status"

    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >



        <LinearLayout
            android:id="@+id/container_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/admin_profile"

                    android:layout_width="55dp"
                    android:layout_height="55dp"


                    android:src="@drawable/avatar" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/admin_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="sans-serif"
                        android:text="Server"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <!--<androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/accept_request"
                        android:layout_width="56dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toLeftOf="@+id/ignore_request"
                        android:background="#00000000"
                        android:text="Accept"
                        android:textSize="12sp" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/ignore_request"
                        android:layout_width="56dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:background="#00000000"
                        android:text="Ignore"
                        android:textSize="12sp" />-->





                </RelativeLayout>

            </LinearLayout>



            <TextView
                android:id="@+id/server_list_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:layout_gravity="right"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="30dp" />






        </LinearLayout>

        <View
            android:layout_above="@id/container_main"
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"


            android:background="@color/grey"/>



    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>